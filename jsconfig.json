{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "jsx": "preserve"
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.vue", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "build"]
}